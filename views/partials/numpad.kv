<NumPad>:
    number_display_font_size: 44
    image_button_source: None

    orientation: 'vertical'
    padding: 10
    spacing: 10

    BoxLayout:
        size_hint_y: 1.5
        spacing: 5

        TextInput:
            size_hint_x: 8
            focus: True
            font_size: root.number_display_font_size
            text_size: self.size
            text: root.number_display
            hint_text: '0'
            multiline: False

        Button:
            size_hint_x: 2
            on_release: root.push_delete_button()
            Image:
                source: 'assets/open_iconic/inverted/delete-4x.png'
                center: self.parent.center

    GridLayout:
        size_hint_y: 6
        cols: 3
        spacing: 5

        NumButton:
            text: '7'
            on_release: root.push_num_button(self.text)
        NumButton:
            text: '8'
            on_release: root.push_num_button(self.text)
        NumButton:
            text: '9'
            on_release: root.push_num_button(self.text)

        NumButton:
            text: '4'
            on_release: root.push_num_button(self.text)
        NumButton:
            text: '5'
            on_release: root.push_num_button(self.text)
        NumButton:
            text: '6'
            on_release: root.push_num_button(self.text)

        NumButton:
            text: '1'
            on_release: root.push_num_button(self.text)
        NumButton:
            text: '2'
            on_release: root.push_num_button(self.text)
        NumButton:
            text: '3'
            on_release: root.push_num_button(self.text)

        NumButton:
            text: '0'
            on_release: root.push_num_button(self.text)
        NumButton:
            id: num_button_optional
        ImageButton:
            id: image_button
            image_source: root.image_button_source
            on_release: root.push_image_button()


<NumButton@Button>:
    font_size: 30


<ImageButton@Button>
    image_source: None
    Image:
        source: root.image_source
        center: self.parent.center
