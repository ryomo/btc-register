#:include views/partials/price_label.kv
#:import Utils library.utils.Utils

<QrCode>:

    BoxLayout:
        size_hint_x: 4
        orientation: 'vertical'
        Label:
            font_size: 30
            text: '{:,} BTC'.format(Utils.satoshi_to_btc(root.payment_satoshi))
        Label:
            font_size: 30
            text: '{} {:,}'.format(app.fiat.mark, app.fiat.cent_to_dollar(root.payment_amount)) if root.payment_amount else ''
        PriceLabel:
            font_size: 30
            btcprice: root.btcprice_fixed
            btcprice_date: root.btcprice_date_fixed

    Image:
        canvas.after:
            Color:
                rgba: 1, 1, 1, root.result_texture_alpha
            Rectangle:
                pos: self.x + self.width/2 - self.width * 4/16, self.y + self.height/2 - self.height * 3/16
                size: self.width * 4/8, self.height * 3/8
                texture: root.result_texture

        size_hint_x: 6
        texture: root.qrcode_texture
        allow_stretch: True
        keep_ratio: True
