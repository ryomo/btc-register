<FiatScreen>:
    BoxLayout:
        orientation: 'vertical'

        Label:
            font_size: 50
            text: '{}: {}'.format(app.m('sub_fiat_screen_total'), app.f(app.fiat.cent_to_dollar(root.payment_total)))

        Label:
            font_size: 50
            text: '{}: {}'.format(app.m('sub_fiat_screen_paid'), app.f(app.fiat.cent_to_dollar(root.payment_paid)))

        Label:
            font_size: 50
            text: '{}: {}'.format(app.m('sub_fiat_screen_change'), app.f(app.fiat.cent_to_dollar(root.payment_change)))
