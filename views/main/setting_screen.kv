<SettingScreen>:
    lang_spinner: lang_spinner
    exchange_spinner: exchange_spinner

    canvas.before:
        Color:
            rgb: .5, .5, .5
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        padding: 10

        BoxLayout:
            size_hint_y: 1
            spacing: 10

            FlashMessage:
                size_hint_x: 9
                text: root.message

            DropDownMenu:
                size_hint_x: 1

        ScrollView:
            size_hint_y: 8
            scroll_type: ['bars', 'content']
            bar_width: 5

            BoxLayout:
                size_hint_y: None
                height: self.minimum_height
                orientation: 'vertical'
                spacing: 10

                BoxLayout:
                    size_hint_y: None
                    height: 48
                    LabelSection:
                        size_hint_x: 3
                        text: app.m('language')
                    Spinner:
                        size_hint_x: 7
                        id: lang_spinner
                        values: root.langs
                        on_text: root.select_lang_spinner(self.text)

                BoxLayout:
                    size_hint_y: None
                    height: 48
                    LabelSection:
                        size_hint_x: 3
                        text: app.m('price_reference_exchange')
                    Spinner:
                        size_hint_x: 7
                        id: exchange_spinner
                        values: root.exchanges
                        on_text: root.select_exchange_spinner(self.text)

                Widget:
                    size_hint_y: None
                    height: 24

                Label:
                    size_hint_y: None
                    height: 48
                    text: app.m('readonly_settings')

                BoxLayout:
                    size_hint_y: None
                    height: 48
                    LabelSection:
                        size_hint_x: 1
                        text: '[app]'
                    LabelSection:
                        size_hint_x: 2
                        text: 'shop_name'
                    TextInputValue:
                        size_hint_x: 7
                        text: root.shop_name

                BoxLayout:
                    size_hint_y: None
                    height: 48 * 3
                    BoxLayout:
                        size_hint_x: 1
                        orientation: 'vertical'
                        LabelSection:
                            size_hint_y: 1
                            text: '[lnd]'
                        Widget:
                            size_hint_y: 2

                    BoxLayout:
                        size_hint_x: 9
                        orientation: 'vertical'
                        spacing: 5
                        BoxLayout:
                            LabelSection:
                                size_hint_x: 2
                                text: 'url'
                            TextInputValue:
                                size_hint_x: 7
                                text: root.lnd_url
                        BoxLayout:
                            LabelSection:
                                size_hint_x: 2
                                text: 'cert_path'
                            TextInputValue:
                                size_hint_x: 7
                                text: root.lnd_cert_path
                        BoxLayout:
                            LabelSection:
                                size_hint_x: 2
                                text: 'macaroon_path'
                            TextInputValue:
                                size_hint_x: 7
                                text: root.lnd_macaroon_path

        BoxLayout:
            size_hint_y: None
            height: 48
            Widget:
                size_hint_x: 8
            Button:
                size_hint_x: 2
                text: app.m('save_and_restart')
                on_release: root.save_and_restart()

<LabelSection@Label>
    markup: True
    font_size: 20

# Note: Disable TextInput, because of this issue. [issue #4253](https://github.com/kivy/kivy/issues/4253)
<TextInputValue@TextInput>
    disabled: True
    font_size: 20
    text_size: self.size
    multiline: False
