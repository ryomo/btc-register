#:include views/partials/numpad.kv
#:include views/partials/price_label.kv
#:import Utils library.utils.Utils

<HomeScreen>:
    canvas.before:
        Color:
            rgb: .5, .5, .5
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'
        padding: 10

        BoxLayout:
            size_hint_y: 1
            spacing: 10

            FlashMessage:
                size_hint_x: 9
                text: root.message

            DropDownMenu:
                size_hint_x: 1

        BoxLayout:
            size_hint_y: 9
            spacing: 10

            #############
            # LEFT SIDE #
            #############
            BoxLayout:
                size_hint_x: 4
                orientation: 'vertical'
                spacing: 5

                BoxLayout:
                    # Top
                    size_hint_y: 1.5
                    spacing: 10

                    Button:
                        size_hint_x: 2
                        text: app.m('clear_button')
                        on_release: root.clear_inputted_data()

                    BoxLayout:
                        canvas.before:
                            Color:
                                rgb: .4, .4, .4
                            Rectangle:
                                pos: self.pos
                                size: self.size
                        size_hint_x: 8.5
                        padding: 2

                        PriceLabel:
                            size_hint_x: 8
                            font_size: 20
                            btcprice: root.btcprice
                            btcprice_date: root.btcprice_date

                        Button:
                            size_hint_x: 1.5
                            on_release: app.update_btcdata()
                            Image:
                                source: 'assets/open_iconic/inverted/reload-2x.png'
                                center: self.parent.center

                ItemList:
                    # Middle
                    id: item_list
                    size_hint_y: 6.5

                BoxLayout:
                    # Bottom
                    size_hint_y: 2
                    Label:
                        size_hint_x: 8
                        font_size: 20
                        text: '{} {:,} / {:,} BTC'.format(app.fiat.mark, app.fiat.cent_to_dollar(root.payment_amount), Utils.satoshi_to_btc(root.payment_satoshi))
                    Button:
                        size_hint_x: 2
                        on_release: root.popup_payment_method()
                        Image:
                            source: 'assets/open_iconic/inverted/check-4x.png'
                            center: self.parent.center


            ##############
            # RIGHT SIDE #
            ##############
            TabbedPanel:
                size_hint_x: 6
                do_default_tab: False

                tab_height: 20

#                TabbedPanelItem:
#                    text: 'Select Items'
#                    BoxLayout:
#                        orientation: 'vertical'
#                        padding: 10
#                        spacing: 10

                TabbedPanelItem:
                    text: 'Input'
                    NumPadInput:
                        id: numpad
                        image_button_source: 'assets/open_iconic/inverted/plus-4x.png'


<ItemList>:
    size_hint_y: 9
    data: root.items
    viewclass: 'Item'
    scroll_type: ['bars', 'content']
    bar_width: 5
    RecycleBoxLayout:
        default_size: None, 56
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'
        spacing: 2


<Item>:
    canvas.before:
        Color:
            rgb: .3, .3, .3
        Rectangle:
            pos: self.pos
            size: self.size
    Label:
        size_hint_x: 6
        text: '{} {:,}'.format(app.fiat.mark, app.fiat.cent_to_dollar(root.price))
    Button:
        on_release: root.parent.parent.delete_item(int(root.index))
        Image:
            source: 'assets/open_iconic/inverted/x-2x.png'
            center: self.parent.center


<PaymentMethodPopup>:
    size_hint: .8, .8
    title: app.m('select_payment_method')

    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 20

        GridLayout:
            id: grid
            size_hint_y: 9
            spacing: 5

        Button:
            size_hint_y: 1
            text: app.m('close_button')
            on_release: root.dismiss()
