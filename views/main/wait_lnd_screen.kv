#:include views/partials/qr_code.kv

<WaitLndScreen>:
    canvas.before:
        Color:
            rgb: .5, .5, .5
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 10

        FlashMessage:
            size_hint_y: 1
            text: root.message

        QrCodeMain:
            size_hint_y: 8
            btcprice_fixed: root.btcprice_fixed
            btcprice_date_fixed: root.btcprice_date_fixed
            payment_satoshi: root.payment_satoshi
            payment_amount: root.payment_amount
            qrcode_texture: root.qrcode_texture
            result_texture: root.result_texture
            result_texture_alpha: root.result_texture_alpha

        BoxLayout:
            size_hint_y: 1

            Button:
                size_hint_x: 4
                text: 'Back'
                on_release: root.back_to_input_screen()

            Widget:
                size_hint_x: 6
